class com.leandro.notify.Notify extends Component {
	
	
	void alert( /* Text to be shown */ String text){*
		this["msgtype"] = "alert";
		this["msgtext"] = text;
		this["shownote"] = "Y";
	*}
	void information( /* Text to be shown */ String text){*
		this["msgtype"] = "information";
